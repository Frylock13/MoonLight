.inventory
  .col-md-6.grid.col-md-offset-1
    = render 'players/player'

  .col-md-5
    = render 'menu'

    .items
      - if @weapons.present?
        - @weapons.each do |item|
          - cache item do
            = render 'equipment/items/item', item: item
      - else
        %h2 No equipment items

      - if @tools.present?
        - @tools.each do |item|
          - cache item do
            = render 'tool/items/item', item: item
      - else
        %h2 No craft tools

      - if @resources.present?
        - @resources.each do |resource|
          - cache resource do
            = resource.image.url
      - else
        %h2 No craft resources
