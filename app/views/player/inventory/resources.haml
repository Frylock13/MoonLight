.inventory.resources
  .col-md-6.grid.col-md-offset-2
    = render 'players/player'

  = render 'menu'

  = link_to 'Sell all', sell_all_resources_path, method: :post, class: 'btn btn-warning'

  .items
    - if @resources.present?
      - @resources.each do |resource|
        - cache resource do
          = image_tag resource.image.url
    - else
      %h2 No craft resources