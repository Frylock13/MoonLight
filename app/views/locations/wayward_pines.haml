.wayward-pines
  %h1.text-center= @location.name

  .map.center
    .cells
      - @cells.each do |cell|
        - cache cell do
          .cell
            = link_to image_tag("locations/wayward_pines/cells/#{cell.slug}.png"), location_cell_move_path(location_id: params[:action], cell_id: cell.slug)
            = cell.check_for_current_position(current_user.player.location.slug)