.item.row
  .col-md-3
    = image_tag item.image.url, class: 'item-img'

  .col-md-9
    .level
      = item.level_of_skill(current_user.player)

    %h2= item.name
    
    .buy-button
      = link_to 'Put on', tool_item_put_on_path(item.id), method: :post, class: 'btn btn-info' if params[:action] == 'inventory'
      = item.buy_or_sell_button(current_user.player)