.profile
  .progress
    .progress-bar.progress-bar-danger{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "80", :role => "progressbar", :style => "width: 100%"}
      %span.sr-only 80% Complete (danger)
      = "#{@profile.hp} HP"
      
  .progress
    .progress-bar.progress-bar-info{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", :role => "progressbar", :style => "width: 100%"}
      %span.sr-only 20% Complete
      1 MP

  .progress
    .progress-bar.progress-bar-warning{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", :role => "progressbar", :style => "width: #{progress_percents(@profile.exp_next, @profile.exp)}"}
      = "EXP: #{@profile.exp}/#{@profile.exp_next}"

  .avatar
    = image_tag 'profiles/warrior.jpg', class: 'avatar'

  - if @inventory_items.present?
    - @inventory_items.each do |item|
      .profile-items
        %div#item{class: "item.category.name item"}
          = link_to item_item_put_off_path(item_id: item.id), method: :post do
            = image_tag item.image.url
          .stats#stats
            .attack.stat
              = image_tag 'items/attack.png'
              = item.attack

            .defense.stat
              = image_tag 'items/defense.png'
              = item.defense

            .hp.stat
              = image_tag 'items/hp.png'
              = item.hp

            .put-off
              = link_to item_item_put_off_path(item_id: item.id), method: :post do
                = image_tag 'profiles/put_off.png'

:javascript
  $('.profile-items > #item').hover(function () {
    $(this).find('#stats').css('display', 'block');
  }, function () {
    $(this).find('#stats').css('display', 'none');
  });