!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Mushrooms
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container-fluid.player
      .row
        .header
          %nav.navbar
            %ul
              %li= link_to 'Profile', player_path, class: 'btn btn-default'
              %li= link_to 'Inventory', inventory_player_path, class: 'btn btn-default'
              %li= link_to 'Stats', player_stats_path, class: 'btn btn-default'
              %li= link_to "Back to #{current_user.player.location.name}", location_path(current_user.player.location.slug), class: 'btn btn-success'
              %li= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-danger'
              %li
                = image_tag 'players/gold.png'
                = current_user.player.gold
      
      .container
        = yield
