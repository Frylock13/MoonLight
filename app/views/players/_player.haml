.player-name
  = "#{@player.name}[#{@player.level}]"

.progresses
  .progress
    .progress-bar.progress-bar-danger{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "80", :role => "progressbar", :style => "width: 100%"}
      %span.sr-only 80% Complete (danger)
      = "#{@player.decorate.current_hp_get} HP"
      
  .progress
    .progress-bar.progress-bar-info{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", :role => "progressbar", :style => "width: 100%"}
      %span.sr-only 20% Complete
      1 MP

  .progress
    .progress-bar.progress-bar-warning{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", :role => "progressbar", :style => "width: #{progress_percents(@player.exp_next, @player.exp)}"}
      = "EXP: #{@player.exp}/#{@player.exp_next}"

.player
  .player-items.left-column
    - @wearable_eqipment.each do |item|
      %div{class: "#{item.category.name.downcase} item"} 
        = link_to equipment_item_put_off_path(item_id: item.id), method: :post do 
          = image_tag item.image.url

  .avatar
    = image_tag @player.image.url, class: 'avatar'


  - if @wearable_tools.present?
    - @wearable_tools.each_with_index do |item, index|
      .player-items.tools
        %div{class: "item tool num-#{index}"}
          = link_to tool_item_put_off_path(item_id: item.id), method: :post do
            = image_tag item.image.url

:javascript
  $('.player-items > #item').hover(function () {
    $(this).find('#stats').css('display', 'block');
  }, function () {
    $(this).find('#stats').css('display', 'none');
  });