.item.row
  .col-md-3
    = image_tag item.image.url, class: 'item-img'

  .col-md-9
    .level
      = item.level_status(current_user.player)

    %h3= item.name

    .attack.stat
      = image_tag 'attack.png'
      = item.attack

    .defense.stat
      = image_tag 'defense.png'
      = item.defense

    .hp.stat
      = image_tag 'hp.png'
      = item.hp

    .buy-button
      = item.put_on_button(current_user.player)
      = item.buy_or_sell_button(current_user.player)
