.item.row
  .col-md-3
    = image_tag item.image.url, class: 'item-img'

  .col-md-9
    .level
      = item.level_status(current_user.player)

    %h2= item.name

    .attack.stat
      = image_tag 'attack.png'
      = item.attack

    .defense.stat
      = image_tag 'defense.png'
      = item.defense

    .hp.stat
      = image_tag 'hp.png'
      = item.hp

    .buy-button
      = link_to 'Put on', equipment_item_put_on_path(item.id), method: :post, class: 'btn btn-info'
      = item.buy_or_sell_button(current_user.player)
