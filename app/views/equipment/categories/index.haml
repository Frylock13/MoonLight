= javascript_pack_tag 'shop'

#shop
  %shop
  .item-categories
    .col-md-2
      //.category{"v-if"=>"show"}
      - @categories.each do |c|
        .category{"v-if"=>"show"}
          = link_to c, equipment_category_path(c.downcase), class: "category-btn btn btn-default #{check_for_active_tab(params[:id], c.downcase)}"

    .col-md-10.items
      = image_tag 'locations/cities/moon_light/weapon_shop/bg.jpg', class: 'center background'