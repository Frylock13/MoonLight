.cell
  %h1.text-center= @location.name

  .col-md-8
    //= image_tag @location.background.url if @location.background.present?
    = image_tag 'locations/wayward_pines/cells/bg.jpg', class: 'center'

  .col-md-4
    - if @bots.present?
      .bots
        - @bots.each do |bot|
          - cache bot do
            .bot.spoiler-wrapper
              .spoiler.folded
                = link_to "#{bot.name}[#{bot.level}]", "javascript:void(0);"

              .spoiler-text
                .row
                  = render 'bots/bot', bot: bot

    - if @resources.present?
      .resources
        - @resources.each do |resource|
          - cache resource do
            .resource
              = image_tag resource.image.url
              = resource.decorate.collect_link(current_user.player)

            #test-modal.white-popup-block.mfp-hide
              %h2 Processing...
              %p
                %i Wait for 10 seconds...
              = image_tag "craft/#{resource.type}"
              %p
                = link_to 'Cancel', '#', class: 'popup-modal-dismiss btn btn-danger'


:javascript
  $(function () {
    $('#collect').magnificPopup({
      type: 'inline',
      preloader: false,
      focus: '#username',
      modal: true
    });
    $(document).on('click', '.popup-modal-dismiss', function (e) {
      e.preventDefault();
      $.magnificPopup.close();
    });
  });